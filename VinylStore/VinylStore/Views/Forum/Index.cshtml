@model IEnumerable<VinylStore.Models.ForumTopic>
@using Microsoft.AspNet.Identity; 

@{
    ViewBag.Title = "Forum";
    var PostAutor= User.Identity;
}

<h2>Index</h2>

@using (Html.BeginForm("CreateTopic", "Forum", "POST")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
   @* @{ 
        VinylStore.Models.ForumTopic forumTopic = new VinylStore.Models.ForumTopic();
    } *@
    <p>Subject of new topic:</p>
    <input type="text" vaule="forumTopic.Subject"/>
    <input type="hidden" value="@PostAutor"/>
    <input type="hidden" value="@DateTime.Now"/>
</div>
<div class="form-group">
    <div class="btn btn-block"><input type="submit" value="Create"/></div>
</div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Autor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Autor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            @Html.ActionLink("View Topic", "ViewTopic", new {id=item.Id })
        </td>
    </tr>
}

</table>
